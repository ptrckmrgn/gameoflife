@model GameOfLife.Models.Template

@{
    ViewBag.Title = "Delete: " + @Model.Name;
}

<script src="~/Scripts/paintGame.js"></script>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="pull-center">
            <h3>Are you sure you want to delete this?</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back", "MyTemplates", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>

        <canvas id="template"></canvas>

        <script type="text/javascript">
            paintGame("#template", @Model.Height, @Model.Width, "@Model.Cells");
            $(window).on('resize', function () {
                paintGame("#template", @Model.Height, @Model.Width, "@Model.Cells");
            });
        </script>
    </div>
</div>



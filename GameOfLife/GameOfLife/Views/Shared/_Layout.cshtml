<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (@ViewBag.Title != "Home")
    {
        <title>Game Of Life | @ViewBag.Title</title>
    }
    else
    {
        <title>Game Of Life</title>
    }
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/jInvertScroll.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script src="https://npmcdn.com/packery@2.1/dist/packery.pkgd.js"></script>
    <script src="~/Scripts/script.min.js"></script>
</head>
<body id="@(Request.Url.AbsolutePath == "/" ? "home" : "")">
    @if (Request.Url.AbsolutePath != "/")
    {
        @Html.Partial("_Header")
    }

    <div id="loading"></div>

    <div class="container body-content">
        @if (@ViewBag.Title != "Home")
        {
            <div class="row">
                <div class="col-xs-12">
                    <h1>@ViewBag.Heading</h1>
                </div>
            </div>

            <div class="hidden-sm">
                <img class="clouds-bottom" id="cloud1" src="~/Resources/img/cloud1.png" />
                <img class="clouds-bottom" id="cloud2" src="~/Resources/img/cloud2.png" />
                <img class="clouds-bottom" id="cloud3" src="~/Resources/img/cloud3.png" />
                <img class="clouds-bottom" id="cloud4" src="~/Resources/img/cloud4.png" />
            </div>
        }
       
        @RenderBody()
    </div>
  
    @Html.Partial("_Footer")

    <script src="~/Scripts/inits.js"></script>

    <script>
        var lastScrollTop = 0;
        $(window).scroll(function (e) {
            var st = $(this).scrollTop();
            if (st > lastScrollTop) {
                $('#cloud1').animate({ bottom: '+=2px' }, 10);
                $('#cloud2').animate({ bottom: '+=3px' }, 10);
                $('#cloud3').animate({ bottom: '+=4px' }, 10);
                $('#cloud4').animate({ bottom: '+=2px' }, 10);
            } else {
                $('#cloud1').animate({ bottom: '-=2px' }, 10);
                $('#cloud2').animate({ bottom: '-=3px' }, 10);
                $('#cloud3').animate({ bottom: '-=4px' }, 10);
                $('#cloud4').animate({ bottom: '-=2px' }, 10);
            }
            lastScrollTop = st;
        });
    </script>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
